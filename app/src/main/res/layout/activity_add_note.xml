<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddNoteActivity"
    android:orientation="vertical">




    <ImageView
        android:id="@+id/imageView1_addnote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:contentDescription="@string/image_view_presentation"
        />
    <View
        android:id="@+id/trasparent_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:alpha="0.7"
     />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/imageButton_addnote"
        android:background="#FF888888"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_but"
        />

    <LinearLayout
        android:id="@+id/popup_window"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="30px"
        android:background="#88888888"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <EditText
            android:id="@+id/editText_titolo_addnote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:textStyle="bold"
            android:inputType="textCapSentences"
            android:background="#00000000"
            android:hint="@string/add_title" >

            <requestFocus />
        </EditText>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/editText_titolo_addnote"
            android:layout_alignLeft="@+id/editText_titolo_addnote"
            android:background="@android:color/darker_gray" />

        <EditText
            android:id="@+id/editText_text_addnote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editText_titolo_addnote"
            android:layout_alignRight="@+id/editText_titolo_addnote"
            android:layout_below="@+id/editText_titolo_addnote"
            android:layout_marginTop="14dp"
            android:background="#00000000"
            android:ems="10"
            android:hint="@string/add_text"
            android:inputType="textMultiLine|textCapSentences" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignBottom="@+id/editText_text_addnote"
            android:layout_alignLeft="@+id/editText_text_addnote"
            android:background="@android:color/darker_gray" />

    </LinearLayout>


</RelativeLayout>
